<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
      <ImageView
            android:id="@+id/mainImg"
            android:layout_width="match_parent"
            android:layout_height="180dp"
             android:background="@drawable/banner"
            android:layout_below="@+id/bardd"
            />
     <Button
            android:id="@+id/btn_upload_data"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_text_background"
            android:textColor="#000000"
         android:gravity="left|center_vertical"

           android:textSize="14sp"
            android:text="Upload Pending data" />
         
        
        
        <Button android:id="@+id/butn_refresh_data"
          android:layout_width="240dp"
     android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
         android:textColor="#000000"
     android:text="Refresh Complete Data"
	 android:gravity="left|center_vertical"

           android:textSize="14sp"/>
    <Button android:id="@+id/butn_summary_report"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_text_background"
        android:textColor="#000000"
        android:text="Account Census Report"
        android:drawableRight="@drawable/alert_text_background"
        android:gravity="left|center_vertical"
        android:textSize="14sp"/>

      <Button
     android:id="@+id/changeRoute"
      android:layout_width="240dp"
     android:layout_height="wrap_content"
          android:visibility="gone"
       android:background="@drawable/alert_text_background"
         android:textColor="#000000"
        android:gravity="left|center_vertical"

           android:textSize="14sp"
     android:text="Change Route"
   
      />

     <Button
        android:id="@+id/btnSalesSummary"
       android:layout_width="240dp"
     android:layout_height="wrap_content"
       android:background="@drawable/alert_text_background"
         android:textColor="#000000"
         android:visibility="gone"
        android:gravity="left|center_vertical"

           android:textSize="14sp"
        android:text="Summary" />
     
       <Button
        android:id="@+id/btnewAddedStore"
       android:layout_width="240dp"
     android:layout_height="wrap_content"
       android:background="@drawable/alert_text_background"
         android:textColor="#000000"
        android:gravity="left|center_vertical"

           android:textSize="14sp"
           android:visibility="gone"
        android:text="View New Added Store" />
      <Button
        android:id="@+id/btnVersion"
       android:layout_width="240dp"
     android:layout_height="wrap_content"
       android:background="@drawable/alert_text_background"
         android:textColor="#000000"
        android:gravity="left|center_vertical"

           android:textSize="14sp"
        android:text="" />
      
       <Button
        android:id="@+id/btnCheckTodayOrder"
       android:layout_width="240dp"
     android:layout_height="wrap_content"
       android:background="@drawable/alert_text_background"
         android:textColor="#000000"
        android:gravity="left|center_vertical"
           android:visibility="gone"
           android:textSize="14sp"
        android:text="Check Today Order" />
    

</LinearLayout>
