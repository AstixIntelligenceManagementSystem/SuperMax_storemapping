<resources>

    <!-- Base application theme. -->

    <style name="side_dialog_animation">

        <item name="android:windowEnterAnimation">@anim/left_in</item>

        <item name="android:windowExitAnimation">@anim/left_out</item>

    </style>

    <style name="AppTheme" parent="AppTheme.Base">


        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/radiocolor</item>
        <item name="colorControlNormal">@color/radiocolor</item>
        <item name="colorControlActivated">@color/radiocolor</item>
        <!--  <item name="android:windowTranslucentStatus">true</item>  -->
        <!--  <item name="colorPrimary">@color/primaryColor</item>


        <item name="colorAccent">@color/accentColor</item> -->
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="StorelistTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimaryDark">@color/storelisttopcolor</item>
        <item name="colorAccent">@color/radiocolor</item>
        <item name="colorControlNormal">@color/radiocolor</item>
        <item name="colorControlActivated">@color/radiocolor</item>
        <!--  <item name="android:windowTranslucentStatus">true</item>  -->
        <!--  <item name="colorPrimary">@color/primaryColor</item>


        <item name="colorAccent">@color/accentColor</item> -->
    </style>
    <style name="CustomEditTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
</resources>
